{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "DescubreAragon Application API",
      "description": "DescubreAragon Application API",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:3000",
    "basePath": "/api-docs",
    "tags": [
      {
        "name": "Users",
        "description": "User interaction API"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/users/add": {
        "post": {
          "tags": [
            "Users"
          ],
          "description": "Create new user in system",
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User that we want to create",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "New user has been created",
              "schema": {
                "$ref": "#/definitions/User"
              }
            },
            "500": {
              "description": "New user could not be created"
            }
          }
        }
      },
      "/users/getAll": {
        "get": {
          "tags": [
            "Users"
          ],
          "description": "Get all users in system",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "List of all users",
              "schema": {
                "$ref": "#/definitions/Users"
              }
            },
            "500": {
              "description": "List of all users could not be retreived"
            }
          }
        }
      },
      "/users/count": {
        "get": {
          "tags": [
            "Users"
          ],
          "description": "Count the number of users in the system",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Number of users in the system",
              "schema": {
                "$ref": "#/definitions/Number"
              }
            },
            "500": {
              "description": "Number of users could not be retreived"
            }
          }
        }
      },
      "/users/countByEmail": {
        "get": {
          "tags": [
            "Users"
          ],
          "description": "Count the number of users in the system by a given email",
          "parameters": [
            {
              "name": "email",
              "in": "path",
              "required": true,
              "description": "Email we want to use for count",
              "type": "string"
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Number of users in the system with the given email",
              "schema": {
                "type": "integer"
              }
            },
            "500": {
              "description": "Number of users could not be retreived"
            }
          }
        }
      },
      "/users/getUser": {
        "get": {
          "tags": [
            "Users"
          ],
          "description": "Get a user by his id",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "description": "Id of the user we want to retreive",
              "type": "string"
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "User with the given id",
              "schema": {
                "$ref": "#/definitions/User"
              }
            },
            "500": {
              "description": "User could not be retreived"
            }
          }
        }
      },
      "/users/search": {
        "get": {
          "tags": [
            "Users"
          ],
          "description": "Search users by name, surname and email",
          "parameters": [
            {
              "name": "email",
              "in": "path",
              "required": true,
              "description": "Email we want to use for the search",
              "type": "string"
            },
            {
              "name": "name",
              "in": "path",
              "required": true,
              "description": "Name we want to use for the search",
              "type": "string"
            },
            {
              "name": "surname",
              "in": "path",
              "required": true,
              "description": "Surname we want to use for the search",
              "type": "string"
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "List of users that match the search",
              "schema": {
                "$ref": "#/definitions/Users"
              }
            },
            "500": {
              "description": "List of users could not be retreived"
            }
          }
        }
      },
      "/users/{userId}": {
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "ID of user that we want to find",
            "type": "string"
          }
        ],
        "get": {
          "tags": [
            "Users"
          ],
          "summary": "Get user with given ID",
          "responses": {
            "200": {
              "description": "User is found",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "delete": {
          "summary": "Delete user with given ID",
          "tags": [
            "Users"
          ],
          "responses": {
            "200": {
              "description": "User is deleted",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "put": {
          "summary": "Update user with give ID",
          "tags": [
            "Users"
          ],
          "parameters": [
            {
              "name": "user",
              "in": "body",
              "description": "User with new values of properties",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User is updated",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      }
    },
    "definitions": {
      "User": {
        "required": [
          "email",
          "_id"
        ],
        "properties": {
          "_id": {
            "type": "string",
            "uniqueItems": true
          },
          "email": {
            "type": "string",
            "uniqueItems": true
          },
          "lastName": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          }
        }
      },
      "Users": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/User"
        }
      }
    }
  }